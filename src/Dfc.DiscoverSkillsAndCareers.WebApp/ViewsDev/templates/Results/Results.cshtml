{% set pageName = 'results' %}
{% set pageGroup = '' %}
{% set pageTitle = '@Model.Title' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.ResultsViewModel;
@{
    ViewData["Title"] = "@Model.Title";
    Layout = null;
}
{% endblock %}

{% block main %}

  <div class="app-masthead">
    <div class="govuk-width-container">

      {% include "_phasebanner.njk" %}

      {{ govukBreadcrumbs({
        items: [
          {
            text: "Home: Discover your skills and careers",
            href: "/"
          },
          {
            text: "Results"
          }
        ]
      }) }}

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
          <h1 class="govuk-heading-xl app-masthead__title">@Model.Headline</h1>
        </div>
      </div>

    </div>
  </div>

  <main id="content" role="main">

    <div class="app-grey">
      <div class="govuk-main-wrapper govuk-width-container govuk-!-padding-top-7">

        <div class="govuk-grid-row">

          <div class="govuk-grid-column-two-thirds app-intro">

            <h2 class="govuk-heading-l">@Model.TraitTitle</h2>

            <div class="govuk-text">
              <ul class="govuk-list">
                @foreach (var trait in Model.Traits)
                {
                    <li>@trait</li>
                }
              </ul>
              <p>@Model.TraitSummaryText</p>
            </div>

          </div>

          <div class="govuk-grid-column-one-third">
            {% include "_printpanel.njk" %}
            {% include "_advisorpanel.njk" %}
          </div>

        </div>
      </div>
    </div>

    <div class="govuk-main-wrapper govuk-width-container @(Model.AssessmentType == "short" ? string.Empty : "govuk-!-padding-top-7")">

      <div class="govuk-grid-row govuk-body">

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            {% include "_sendresults.njk" %}
          </div>
        </div>

        <div class="app-results">

          <h2 class="govuk-heading-l">@Model.JobFamilies.Length job categories that might suit you</h2>

          <ol class="govuk-list govuk-!-margin-bottom-2" id="app-results-list">
            @foreach (var jobFamily in Model.JobFamilies)
            {
              <li class="app-results__item">
                <div class="govuk-grid-row">
                  <div class="govuk-grid-column-two-thirds">
                    <h3 class="govuk-heading-m">@jobFamily.JobFamilyName</h3>
                    <p>@jobFamily.JobFamilyText</p>
                    <p><a href="@jobFamily.Url" role="button" draggable="false" class="">See more @jobFamily.JobFamilyName roles</a></p>
                    <p>To find out job roles you might be suited to in adminstration, answer more questions.</p>
                    @if (Model.UseFilteringQuestions) {
                        @if (jobFamily.FilterAssessment != null)
                        {
                          <a href="/results/@jobFamily.FilterAssessment.JobFamilyNameUrlSafe" role="button" draggable="false" class="govuk-button govuk-button app-button">View results</a>
                        } else {
                          <a href="/results/filtered/@jobFamily.JobFamilyName.ToLower().Replace(" ", "-")" role="button" draggable="false" class="govuk-button app-button">Answer more questions</a>
                        }
                    }
                    <hr>
                  </div>
                </div>
              </li>
            }
          </ol>

        </div>

        <div class="app-back-to-top" data-module="app-back-to-top">
          <a class="govuk-link govuk-link--no-visited-state" href="#top">
            <svg class="app-back-to-top__icon" xmlns="http://www.w3.org/2000/svg" width="13" height="17" viewBox="0 0 13 17">
              <path fill="currentColor" d="M6.5 0L0 6.5 1.4 8l4-4v12.7h2V4l4.3 4L13 6.4z"></path>
            </svg>Back to top
          </a>
        </div>

      </div>

    </div>

  </main>

{% endblock %}
