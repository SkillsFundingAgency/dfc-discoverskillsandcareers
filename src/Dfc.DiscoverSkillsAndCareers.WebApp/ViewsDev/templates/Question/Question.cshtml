{% set pageName = 'questions' %}
{% set pageGroup = 'questions' %}
{% set pageTitle = '@Model.Title @Model.QuestionNumber' %}
{% set versionNumber = '' %}
{% set sessionId= '@Model.SessionId' %}
{% set traitCode= '@Model.TraitCode' %}

{% extends "_base.njk" %}

{% block pre %}
  @model Dfc.DiscoverSkillsAndCareers.WebApp.Models.QuestionViewModel;
  @{
      ViewData["Title"] = "Question";
      Layout = null;
  }
{% endblock %}

{% block tagging %}
    window.dataLayer.push({
        page: {
            pageInfo: {
                questionID: '@Model.QuestionId',
                questionNumber: '@Model.QuestionNumber',
                questionText: '@Model.QuestionText.Substring(Math.Max(0, Model.QuestionText.Length - 40))'
            }
        }
    })
{% endblock %}

{% block main %}

<div class="govuk-width-container app-site-width-container">

    {% include "_phasebanner.njk" %}

    {% include "_breadcrumbpanel.njk" %}

</div>

<main id="content" role="main">
    <div class="govuk-main-wrapper govuk-width-container">
        <form action="@Model.FormRoute" method="post">

            <input type="hidden" name="sessionId" value="@Model.SessionId" />
            <input type="hidden" name="questionId" value="@Model.QuestionId" />

            <div class="govuk-grid-row app-question-progress">
                <div class="govuk-grid-column-two-thirds-from-desktop">

                    <div class="ncs-progress">
                        <span class="ncs-progress__count"><b class="govuk-!-font-size-36">@Model.Percentage%</b> <b class="visually-hidden">Complete</b></span>
                        <div class="ncs-progress__bar"><span style="width: @Model.Percentage%"></span></div>
                    </div>

                </div>
                <div class="govuk-grid-column-one-third-from-desktop">
                    {% set savepanelClass = 'alt' %}
                    {% include "_savepanel.njk" %}
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage)) {

                <div class="govuk-grid-row app-error">
                    <div class="govuk-grid-column-two-thirds-from-desktop">
                        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                            <h2 class="govuk-error-summary__title" id="error-summary-title">
                                There is a problem
                            </h2>
                            <div class="govuk-error-summary__body">
                                <ul class="govuk-list govuk-error-summary__list">
                                    <li>
                                    @Model.ErrorMessage
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <fieldset class="govuk-fieldset app-question app-question--short">

                <legend class="visually-hidden">@Model.QuestionText</legend>

                <div class="govuk-fieldset__legend govuk-fieldset__legend--l app-question__question">
                    <h1 class="govuk-fieldset__heading" aria-hidden="true">
                        @Model.QuestionText
                    </h1>
                </div>

                <div class="app-question__answer govuk-radios govuk-radios--inline">

                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="selected_answer-1" name="selected_answer" type="radio" value="StronglyAgree">
                        <label class="govuk-label govuk-radios__label" for="selected_answer-1">
                            @Model.StronglyAgree
                        </label>
                    </div>

                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="selected_answer-2" name="selected_answer" type="radio" value="Agree">
                        <label class="govuk-label govuk-radios__label" for="selected_answer-2">
                            @Model.Agree
                        </label>
                    </div>

                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="selected_answer-5" name="selected_answer" type="radio" value="Neutral">
                        <label class="govuk-label govuk-radios__label" for="selected_answer-5">
                            @Model.Neutral
                        </label>
                    </div>


                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="selected_answer-3" name="selected_answer" type="radio" value="Disagree">
                        <label class="govuk-label govuk-radios__label" for="selected_answer-3">
                            @Model.Disagree
                        </label>
                    </div>

                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="selected_answer-4" name="selected_answer" type="radio" value="StronglyDisagree">
                        <label class="govuk-label govuk-radios__label" for="selected_answer-4">
                            @Model.StronglyDisagree
                        </label>
                    </div>

                </div>

            </fieldset>

            <div class="app-controls">

                {{ govukButton({
                text: "@Model.NextButtonText",
                classes: "app-button btn-next-question",
                type: "submit",
                attributes: {
                "gov-analytics-data": pageName + " | click | button | Submit"
                }
                }) }}

            </div>

            {% set savepanelClass = 'alt-mobile' %}
            {% include "_savepanel.njk" %}

        </form>
    </div>
</main>

{% endblock %}
