{% set pageName = 'resume-code' %}
{% set pageGroup = '' %}
{% set pageTitle = 'Check your phone' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.SaveProgressViewModel;
@{
    ViewData["Title"] = "Save progress";
    Layout = null;
}
{% endblock %}

{% block main %}

<main id="content" role="main">

    <div class="govuk-width-container app-site-width-container">

        {% include "_breadcrumbpanel.njk" %}

    </div>

    <div class="govuk-main-wrapper govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <div class="govuk-body">

                    <h1 class="govuk-heading-xl">Check your phone</h1>

                    <p>A text message has been sent to @Model.SentTo</p>

                    <p>Use the reference in the text message to return to your assessment.</p>

                    <a href="/" class="govuk-button">Return home</a>

                    <p><a href="/results">Return to assessment</a></p>

                </div>

            </div>
        </div>
    </div>
</main>

{% endblock %}
