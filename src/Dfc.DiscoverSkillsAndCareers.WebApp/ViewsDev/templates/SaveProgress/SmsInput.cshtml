{% set pageName = 'resume-code' %}
{% set pageGroup = '' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.SaveProgressViewModel;
@{
    ViewData["Title"] = @Model.PageTitle;
    Layout = null;
}
{% endblock %}

{% block main %}

<div class="govuk-width-container app-site-width-container">

    {% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: "@Model.BackLink"
      }) }}
    {% endblock %}

</div>

<main id="content" role="main">
    <div class="govuk-main-wrapper govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">@Model.SmsPrompt</h1>

                <div class="govuk-body">

                    <form action="/save-my-progress/sms" method="post" class="govuk-grid-row">
                        <div class="govuk-grid-column-two-thirds-from-desktop">
                            {{ govukInput({
                                label: {
                                    text: "@Model.SmsInputLabel"
                                },
                                classes: "",
                                id: "mobileNumber",
                                name: "mobileNumber"
                            }) }}
                            {{ govukButton({
                                text: "@Model.SmsInputButtonText"
                            }) }}
                        </div>
                    </form>

                    @Model.ErrorMessage
                </div>

            </div>
        </div>
    </div>
</main>

{% endblock %}
