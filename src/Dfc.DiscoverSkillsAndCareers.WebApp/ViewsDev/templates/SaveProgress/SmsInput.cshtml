{% set pageName = 'resume-code' %}
{% set pageGroup = '' %}
{% set pageTitle = 'What is your phone number?' %}
{% from "input/macro.njk" import govukInput %}
{% from "button/macro.njk" import govukButton %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.SaveProgressViewModel;
@{
    ViewData["Title"] = "Save progress";
    Layout = Model.Layout;
}
{% endblock %}

{% block main %}

<main id="content" role="main">

    <div class="govuk-width-container app-site-width-container">

        {% include "_breadcrumbpanel.njk" %}

    </div>

    <div class="govuk-main-wrapper govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">What is your phone number?</h1>

                <div class="govuk-body">

                    <form action="@Url.TryApplyCompositeRoute("/save-my-progress/sms")" method="post" class="govuk-grid-row">
                        <div class="govuk-grid-column-two-thirds-from-desktop">
                            {{ govukInput({
                                label: {
                                    text: "Phone number"
                                },
                                classes: "",
                                id: "mobileNumber",
                                name: "mobileNumber"
                            }) }}
                            {{ govukButton({
                                text: "Send"
                            }) }}
                        </div>
                    </form>

                    @Model.ErrorMessage
                </div>

            </div>
        </div>
    </div>
</main>

{% endblock %}
