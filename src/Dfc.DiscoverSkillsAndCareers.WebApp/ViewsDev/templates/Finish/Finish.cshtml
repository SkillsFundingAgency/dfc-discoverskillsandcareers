{% set pageName = 'finish' %}
{% set pageGroup = '' %}
{% set pageTitle = 'Assessment complete' %}

{% extends "_base.njk" %}

{% block pre %}
@model Dfc.DiscoverSkillsAndCareers.WebApp.Models.FinishViewModel;
@{
    ViewData["Title"] = "Assessment complete";
    Layout = null;
}
{% endblock %}

{% block main %}

<main id="content" role="main">
    
    <div class="govuk-width-container app-site-width-container">

        {% include "_phasebanner.njk" %}

        <div class="app-breadcrumb-panel">
            <a href="/" class="govuk-back-link">Back to start</a>
        </div>

    </div>

    <div class="govuk-width-container">
        <div class="govuk-grid-row govuk-!-margin-bottom-9 govuk-!-margin-top-8">
            <div class="govuk-grid-column-two-thirds">

                <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-6">
                    <div class="govuk-panel__body">
                        <div class="ncs-progress ncs-progress--complete status-100">
                            <div class="ncs-progress__count govuk-body">
                                <span class="govuk-!-font-size-36">100%</span>
                                <span class="visually-hidden">Complete</span>
                            </div>
                            <div class="ncs-progress__bar">
                                <span style="width: 100%"></span>
                            </div>
                        </div>
                    </div>
                    <h1 class="govuk-panel__title">
                        Assessment complete
                    </h1>
                </div>

                <h2 class="govuk-heading-m">What to do next</h2>
                <p class="govuk-body">Next, you will see some careers you may be interested in. You can answer more questions to refine your results.</p>
                <p class="govuk-body govuk-!-margin-bottom-5">Your results are based on your responses and do not reflect the opportunities available in the job market.</p>

                {{ govukButton({
          text: "See results",
          href: "/results",
          classes: "app-button"
          }) }}

            </div>
        </div>
    </div>

</main>

{% endblock %}
