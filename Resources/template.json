{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AspSize": {
            "type": "string"
        },
        "AspTier": {
            "type": "string"
        },
        "Environment": {
            "type": "string"
        },
        "StorageContainerName": {
          "type": "string"
        },
        "StaticSiteDomain": {
          "type": "string"
        }
    },
    "variables": {
        "AppInsightsName": "[tolower(concat('dfc-', parameters('Environment'), '-skillscareers-ai'))]",
        "AppServiceName": "[tolower(concat('dfc-', parameters('Environment'), '-skillscareers-as'))]",
        "AppServicePlanName": "[tolower(concat('dfc-', parameters('Environment'), '-skillscareers-asp'))]",
        "BuildingBlocksDasBaseUrl": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/",
        "BuildingBlocksDfcBaseUrl": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
        "CosmosDbName": "[tolower(concat('dfc-', parameters('Environment'), '-skillscareers-cdb'))]",
        "FunctionAppName": "[tolower(concat('dfc-', parameters('Environment'), '-skillscareers-fa'))]",
        "StorageAccountName": "[tolower(concat('dfc', parameters('Environment'), 'skillscareersstr'))]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('AppInsightsName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('BuildingBlocksDasBaseUrl'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('AppInsightsName')]"
                    },
                    "attachedService": {
                        "value": "[variables('FunctionAppName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('AppServiceName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('BuildingBlocksDasBaseUrl'), 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('AppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[variables('AppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    }
                }
            },
            "dependsOn": [
                "[variables('AppServicePlanName')]"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('AppServicePlanName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('BuildingBlocksDasBaseUrl'), 'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[variables('AppServicePlanName')]"
                    },
                    "aspSize": {
                        "value": "[parameters('AspSize')]"
                    },
                    "aspInstances": {
                        "value": 1
                    },
                    "nonASETier": {
                        "value": "[parameters('AspTier')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('CosmosDbName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('BuildingBlocksDfcBaseUrl'), 'cosmos-db.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmosDbName": {
                        "value": "[variables('CosmosDbName')]"
                    },
                    "cosmosApiType": {
                        "value": "SQL"
                    },
                    "defaultConsistencyLevel": {
                        "value": "Strong"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('FunctionAppName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('BuildingBlocksDasBaseUrl'), 'function-app.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[last(split(variables('FunctionAppName'), '/'))]"
                    },
                    "appServicePlanName": {
                        "value": "[variables('AppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "functionAppAppSettings": {
                      "value": [
                        {
                          "name": "FUNCTIONS_EXTENSION_VERSION",
                          "value": "~2"
                        },
                        {
                          "name": "MSDEPLOY_RENAME_LOCKED_FILES",
                          "value": "1"
                        },
                        {
                          "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                          "value": "[reference(variables('AppInsightsName')).outputs.InstrumentationKey.value]"
                        },
                        {
                          "name": "AzureWebJobsStorage",
                          "value": "[reference(variables('StorageAccountName')).outputs.storageConnectionString.value]"
                        },
                        {
                          "name": "CosmosSettings__Endpoint",
                          "value": "[concat('https://', variables('CosmosDbName'), '.documents.azure.com:443/')]"
                        },
                        {
                          "name": "CosmosSettings__Key",
                          "value": "[reference(variables('CosmosDbName')).outputs.PrimaryMasterKey.value]"
                        },
                        {
                          "name": "CosmosSettings__DatabaseName",
                          "value": "DiscoverMySkillsAndCareers"
                        },
                        {
                          "name": "BlobStorage__StorageConnectionString",
                          "value": "[reference(variables('StorageAccountName')).outputs.storageConnectionString.value]"
                        },
                        {
                          "name": "BlobStorage__ContainerName",
                          "value": "discovermyskillsandcareers"
                        },
                        {
                          "name": "StaticSiteDomain",
                          "value": "[parameters('StaticSiteDomain')]"
                        }
                      ]
                    }
                }
            },
            "dependsOn": [
                "[variables('AppServicePlanName')]",
                "[variables('AppInsightsName')]",
                "[variables('CosmosDbName')]",
                "[variables('StorageAccountName')]"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('StorageAccountName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('BuildingBlocksDasBaseUrl'), 'storage-account-arm.json ')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "storageKind": {
                        "value": "StorageV2"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[parameters('StorageContainerName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('BuildingBlocksDfcBaseUrl'), 'storage-account-arm-container.json ')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('StorageAccountName')]"
                    },
                    "storageContainerName": {
                        "value": "[tolower(parameters('StorageContainerName'))]"
                    },
                    "publicAccess": {
                        "value": "Container"
                    }
                }
            },
            "dependsOn": [
                "[variables('StorageAccountName')]"
            ]
        }
    ],
    "outputs": {}
}